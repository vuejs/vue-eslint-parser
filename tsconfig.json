{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "baseUrl": ".",
        "checkJs": false,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": true,
        "lib": ["es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "LF",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": ".temp",
        "paths": {
            "*": ["typings/*"]
        },
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "sourceRoot": "src",
        "strict": true,
        "strictNullChecks": true,
        "target": "es2015",

        "skipLibCheck": true,
    },
    "include": ["src/**/*.ts"]
}
